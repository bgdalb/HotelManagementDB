<Window x:Class="TEMA_3.Views.RegisterView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TEMA_3"
        mc:Ignorable="d"
        Title="RegisterView" Height="450" Width="248">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="47,74,0,0" VerticalAlignment="Top"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="47,150,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="47,105,0,0" TextWrapping="Wrap" Text="{Binding Username}" VerticalAlignment="Top" Width="120"/>
        <TextBox HorizontalAlignment="Left" Margin="47,176,0,0" TextWrapping="Wrap" Text="{Binding Password}" VerticalAlignment="Top" Width="120" />
        <Button Content="Register" Margin="80,304,92,85" Command="{Binding RegisterCommand}" />
        <Label Content="{Binding RegisterStatus}" HorizontalAlignment="Left" Margin="47,314,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Left" Margin="47,249,0,0" TextWrapping="Wrap" Text="{Binding Name}" VerticalAlignment="Top" Width="120" />
        <Label Content="Name" HorizontalAlignment="Left" Margin="47,218,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
